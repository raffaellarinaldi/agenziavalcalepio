<div class="site-section">
  <div class="container">
    <div class="row justify-content-center mb-5">
      <div class="col-12 text-center">
        <div class="site-section-title">
          <h2>Primo contatto</h2>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-12 col-xl-8 mb-5">
        <form id="contact-form" method="POST" data-netlify-recaptcha="true" netlify-honeypot="bot-field" data-netlify="true" class="p-5 bg-white border">
          {% if site.environment == 'production' %}
          <div hidden aria-hidden="true">
            <label>
              Don’t fill this out if you're human:
              <input name="bot-field">
            </label>
          </div>
          {% endif %}
          <div class="row form-group">
            <div class="col-12 mb-3 mb-md-0">
              <label class="font-weight-bold" for="fullname">Nome</label>
              <input type="text" id="fullname" name="fullname" class="form-control" required>
            </div>
          </div>
          <div class="row form-group">
            <div class="col-12">
              <label class="font-weight-bold" for="email">Email</label>
              <input type="email" id="email" name="email" class="form-control" required>
            </div>
          </div>
          <div class="row form-group">
            <div class="col-12">
              <label class="font-weight-bold" for="email">Oggetto</label>
              <input type="text" id="subject" name="subject" class="form-control" required>
            </div>
          </div>
          <div class="row form-group">
            <div class="col-12">
              <label class="font-weight-bold" for="message">Messaggio</label>
              <textarea name="message" id="message" name="message" cols="30" rows="5" class="form-control" required></textarea>
            </div>
          </div>
          <div class="row form-group mx-1">
            <label for="form-check">Ai sensi e per gli effetti degli articoli 13 e 6 del Regolamento UE 2016/679:</label>
            <div class="form-check">
              <input class="form-check-input" type="checkbox" value="" id="form-checkbox" required>
              <label class="form-check-label" for="form-checkbox">Dichiaro di aver preso visione dell’<a href="https://www.iubenda.com/privacy-policy/62197139" class="iubenda-embed iubenda-noiframe iubenda-nostyle" title="Privacy Policy">informativa</a> per il trattamento dei dati personali e chiedo di essere ricontattato/a per l’espletamento della mia richiesta.</label>
            </div>
          </div>
          {% if site.environment == 'production' %}
          <div class="row form-group">
            <div class="col-12">
              <div data-netlify-recaptcha="true"></div>
            </div>
          </div>
          {% endif %}
          <div class="row form-group">
            <div class="col-12">
              <input type="submit" value="Invia" class="btn btn-primary py-2 px-4 rounded-0">
            </div>
          </div>
          <div class="row form-group">
            <div class="col-12">
              <div id="form-result"></div>
            </div>
          </div>
        </form>
      </div>
      <div class="col-12 col-xl-4">
        <div class="p-4 mb-3 bg-white">
          <h3 class="h6 text-black mb-3 text-uppercase">Informazioni di contatto</h3>
          <p class="mb-0 font-weight-bold">Indirizzo</p>
          <p class="mb-4">{{ site.address }}</p>
          <p class="mb-0 font-weight-bold">Telefono</p>
          <p class="mb-4">
            <a href="tel:+{{ site.phone.land | replace(" ", "") }}">{{ site.phone.land }}</a>
            <br>
            <a href="tel:+{{ site.phone.mobile | replace(" ", "") }}">{{ site.phone.mobile }}</a>
          </p>
          <p class="mb-0 font-weight-bold">Email</p>
          <p class="mb-4"><a href="mailto:{{ site.email }}">{{ site.email }}</a></p>
          <p class="mb-0 font-weight-bold">Orari</p>
          <p class="mb-4">
            Lun 14–19:30<br>Mar-Ven 08:30–12:30<br>Mar-Ven 14–19:30<br>Sab 08:30–12:30
          </p>
          <p class="mb-0">
            <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2789.15877331479!2d9.907577915563593!3d45.64763317910356!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x47816704f32c9123%3A0x8cbfac0caec16b8!2sAgenzia%20immobiliare%20Valcalepio!5e0!3m2!1sit!2sit!4v1625682294680!5m2!1sit!2sit" width="100%" height="250" style="border:0;" allowfullscreen="" loading="lazy"></iframe>
          </p>
        </div>
      </div>
    </div>
  </div>
</div>
